@page
@model BudgetTRacker.Pages.CashEntryModel
@{
    ViewData["Title"] = "Cash Entry";
}


<div class="modal">
    <button class="close-button" onclick="window.history.back()">&times;</button>
    <h2>Add Cash Amount</h2>

    <div style="color: red; font-size: 14px; margin-top: 5px;">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error-message">@Model.ErrorMessage</div>
        }
    </div>

    <form method="post">
        <div class="form-group">
            <label for="Amount">Amount*</label>
            <input type="text" id="Amount" asp-for="NewCashEntry.Amount" class="form-control" required>
            <span asp-validation-for="NewCashEntry.Amount" class="text-danger"></span>

        </div>

        <div class="form-group">
            <label for="AddDate">Date*</label>
            <input asp-for="NewCashEntry.AddDate" id="AddDate" type="datetime-local" class="form-control" />
            <span asp-validation-for="NewCashEntry.AddDate" class="text-danger"></span>
        </div>


        <button type="submit" class="save-button">SAVE</button>
    </form>
</div>

<style>
    /* Inline style for demonstration; move this to global.css */
    .modal {
        background-color: white;
        width: 600px;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        position: relative;
        font-family: Arial, sans-serif;
    }

        .modal h2 {
            font-size: 24px;
            margin-bottom: 10px;
            font-weight: bold;
        }

    .close-button {
        position: absolute;
        top: 10px;
        right: 10px;
        font-size: 18px;
        border: none;
        background: none;
        cursor: pointer;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 15px;
    }

    .currency-input {
        display: flex;
    }

        .currency-input input[type="text"] {
            flex-grow: 1;
            margin-right: 5px;
        }

    .currency-symbol {
        padding: 10px;
        background-color: #e9ecef;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 14px;
        color: #6c757d;
    }

    .save-button {
        padding: 10px 20px;
        background-color: #0056b3;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 14px;
        font-weight: bold;
        cursor: pointer;
        width: 100%;
    }

        .save-button:hover {
            background-color: #004494;
        }


    .text-danger {
        color: red;
        font-size: 12px;
        margin-top: 5px;
        display: block;
        text-align: left;
    }
</style>