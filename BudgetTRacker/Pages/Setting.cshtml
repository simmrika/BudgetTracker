@page
@model SettingModel
@{
    ViewData["Title"] = "Setting";
}

<div class="layout-container">

    <!-- Main Content -->
        <div class="container">
            <div class="header">Security Setting</div>
            <ul class="settings-list">
                <li class="settings-item">
                    Change Password
                    <span class="arrow">›</span>
                </li>
                <li class="settings-item">
                    Download Your Transactions
                    <span class="arrow">›</span>
                </li>
                <li class="settings-item">
                    Change Email
                    <span class="arrow">›</span>
                </li>
                <li class="settings-item">
                    Link Account
                    <span class="arrow">›</span>
                </li>
                <li class="settings-item">
                    Terms and Conditions
                    <span class="arrow">›</span>
                </li>
            </ul>
        </div>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f9f9f9;
    }

    .layout-container {
        display: flex;
        height: 100vh;
    }

    /* Sidebar styling */
    .sidebar {
        width: 200px;
        background-color: #fff;
        padding: 20px;
        border-right: 1px solid #ddd;
    }

    /* Main content styling */
    .main-content {
        flex: 1;
        padding: 20px;
        overflow-y: auto;
        background-color: #f8f9fa;
    }

    .top-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px;
        background-color: #fff;
        border-bottom: 1px solid #ddd;
        margin-bottom: 20px;
    }

    /* Container for Security Settings */
    .container {
        max-width: 600px;
        margin: 0 auto;
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
    }

    .header {
        font-size: 24px;
        font-weight: bold;
        padding: 15px 20px;
        background-color: #f1f1f1;
        border-bottom: 1px solid #ddd;
    }

    .settings-list {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    .settings-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 20px;
        border-bottom: 1px solid #ddd;
        cursor: pointer;
        font-size: 16px;
    }

        .settings-item:last-child {
            border-bottom: none;
        }

        .settings-item:hover {
            background-color: #f5f5f5;
        }

        .settings-item .arrow {
            font-size: 18px;
            color: #888;
        }
</style>
