                        <span>Account Number</span>
                        <span>NPR 2000.00</span>
                        <div class="bell"><i class="fas fa-bell"></i></div>
                    </div>
                </div>
            </div>

            <!-- Activities and Transactions -->
            <div class="activities-section">
                <div class="activities-chart">
                    <h2>Activities</h2>
                    <canvas id="activitiesChart"></canvas>
                </div>

                <!-- Transaction Summary -->
                <div class="transaction-summary">
                    <div class="transaction-box">
                        <h4>My Transaction</h4>
                        <ul>
                            <li><span class="icon">🍔</span>Food - Rs.2000</li>
                            <li><span class="icon">💡</span>NEA - Rs.2000</li>
                            <li><span class="icon">🌐</span>Internet - Rs.2000</li>
                            <li><span class="icon">🎓</span>College - Rs.2000</li>
                        </ul>
                    </div>

                    <div class="category-box">
                        <h4>Categories</h4>
                        <ul>
                            <li><span class="icon">🍔</span>Food</li>
                            <li><span class="icon">💡</span>NEA</li>
                            <li><span class="icon">🌐</span>Internet</li>
                            <li><span class="icon">🎓</span>College</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
