@model BudgetTRacker.Pages.SignInModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Rupiya</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #FBFBFB;
            font-family: 'Poppins', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            padding: 40px;
            text-align: center;
            width: 400px;
        }

            .login-container img {
                width: 80px;
                margin-bottom: 20px;
            }

        h2 {
            font-weight: 300;
            margin-bottom: 20px;
            color: #333;
        }

        .input-field {
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            background-color: #f8f8f8;
        }

            .input-field:focus {
                border-color: #02457A;
                outline: none;
            }

        .password-container {
            position: relative;
        }

            .password-container i {
                position: absolute;
                right: 10px;
                top: 50%;
                transform: translateY(-50%);
                cursor: pointer;
            }

        .checkbox-remember {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-top: 10px;
            font-size: 14px;
        }

            .checkbox-remember input[type="checkbox"] {
                margin-right: 5px;
            }

        .login-btn {
            width: 100%;
            background-color: #02457A;
            color: white;
            padding: 12px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            margin-top: 20px;
            cursor: pointer;
        }

            .login-btn:hover {
                background-color: #013a63;
            }

        .divider {
            position: relative;
            text-align: center;
            margin: 20px 0;
        }

            .divider::before,
            .divider::after {
                content: '';
                height: 1px;
                width: 40%;
                background-color: #ccc;
                display: inline-block;
                position: absolute;
                top: 50%;
            }

            .divider::before {
                left: 0;
            }

            .divider::after {
                right: 0;
            }

            .divider span {
                background-color: #FBFBFB;
                padding: 0 10px;
                color: #777;
            }

        .google-btn {
            width: 100%;
            border: 1px solid #02457A;
            color: #02457A;
            padding: 12px;
            font-size: 16px;
            border-radius: 5px;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            margin-bottom: 10px;
        }

            .google-btn img {
                width: 20px;
                margin-right: 10px;
            }

            .google-btn:hover {
                background-color: #f1f1f1;
            }

        .signup-link {
            font-size: 14px;
            margin-top: 20px;
        }

            .signup-link a {
                text-decoration: none;
                color: #02457A;
                font-weight: 500;
            }

                .signup-link a:hover {
                    text-decoration: underline;
                }

    </style>
</head>
<body>
    <div class="login-container">
        <img src="https://i.pravatar.cc/80" alt="User Avatar">
        <h2>Welcome to Rupiya...</h2>

        <!-- Username input -->
        <input type="text" class="input-field" placeholder="Username" required>

        <!-- Password input with eye icon -->
        <div class="password-container">
            <input type="password" class="input-field" placeholder="Password" required>
            <i class="fas fa-eye"></i>
        </div>

        <!-- Remember Me and Forgot Password -->
        <div class="checkbox-remember">
            <label>
                <input type="checkbox"> Remember Me
            </label>
            <a href="#">Forgot Password</a>
        </div>

        <!-- Continue Button -->
        <button class="login-btn">Continue</button>

        <!-- OR Divider -->
        <div class="divider"><span>OR</span></div>

        <!-- Continue with Google -->
        <button class="google-btn">
            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png" alt="Google Logo">
            Continue with Google
        </button>

        <!-- Sign Up Link -->
        <div class="signup-link">
            Don't have an account? <a href="#">Sign Up</a>
        </div>
    </div>

    <script>
        // Script to toggle password visibility
        const passwordField = document.querySelector('.password-container input');
        const eyeIcon = document.querySelector('.password-container i');

        eyeIcon.addEventListener('click', () => {
            const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordField.setAttribute('type', type);
            eyeIcon.classList.toggle('fa-eye-slash');
        });
    </script>

    <!-- FontAwesome for icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>
</html>

