@page
@model BudgetTRacker.Pages.CategoryModel
@{
    ViewData["Title"] = "Categories";
}

<div class="categories">
    <div class="categories-header">
        <h4>Categories</h4>
        <div class="header-buttons">
            <form method="post" asp-page-handler="DeleteSelected" class="inline-form">
                <button type="submit" class="btn-delete">
                    <i class="fa fa-trash"></i>
                </button>
            </form>
            <a asp-page="/AddCategory" class="btn-add">
                <i class="fa fa-plus"></i> Add Category
            </a>
        </div>
    </div>

    @if (Model.CategoryExpenditureslist.Any())
    {
        <form method="post" asp-page-handler="DeleteSelected">
            @foreach (var category in Model.CategoryExpenditureslist)
            {
                <div class="category-item">
                    <input type="checkbox" name="SelectedCategories" value="@category.CategoryName" class="category-checkbox" />
                    <div class="icon-container
                @(category.CategoryName == "Food" ? "food-icon" :
                  category.CategoryName == "NEA" ? "nea-icon" :
                  category.CategoryName == "Internet" ? "internet-icon" :
                  category.CategoryName == "College" ? "college-icon" :
                  "default-icon")">
                        <i class="fa-solid
                    @(category.CategoryName == "Food" ? "fa-bowl-food" :
                      category.CategoryName == "NEA" ? "fa-lightbulb" :
                      category.CategoryName == "Internet" ? "fa-wifi" :
                      category.CategoryName == "College" ? "fa-graduation-cap" :
                      "fa-receipt")"></i>
                    </div>
                    <span>@category.CategoryName</span>
                    <span class="amount">Rs. @category.TotalAmount</span>
                </div>
            }

        </form>
    }
</div>
