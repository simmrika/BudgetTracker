@page
@model NewTransactionModel
@{
    ViewData["Title"] = "New Transaction";
}
<div class="modal">
    <button class="close-button" onclick="window.history.back()">&times;</button>
    <h2>New Transaction</h2>
    <form method="post">
        <div class="form-group">
            <label for="Name">Name*</label>
            <input type="text" id="Name" name="Name" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="Date">Date*</label>
            <input type="date" id="Date" name="Date" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="Merchant">Merchant*</label>
            <input type="text" id="Merchant" name="Merchant" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="Total">Total*</label>
            <div class="currency-input">
                <input type="text" id="Total" name="Total" class="form-control" required>
                <span class="currency-symbol">NPR</span>
            </div>
        </div>

        <div class="form-group">
            <label for="Category">Category*</label>
            <select id="Category" name="Category" class="form-control" required>
                <option value="">Type</option>
                <option value="food">Food</option>
                <option value="transport">Transport</option>
                <option value="utilities">Utilities</option>
                <option value="shopping">Shopping</option>
            </select>
        </div>

        <div class="form-group">
            <label for="Description">Description</label>
            <textarea id="Description" name="Description" rows="3" class="form-control"></textarea>
        </div>

        <button type="submit" class="save-button">SAVE</button>
    </form>
</div>

<style>
    /* Inline style for demonstration; move this to global.css */
    .modal {
        background-color: white;
        width: 600px;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        position: relative;
        font-family: Arial, sans-serif;
    }

        .modal h2 {
            font-size: 24px;
            margin-bottom: 10px;
            font-weight: bold;
        }

    .close-button {
        position: absolute;
        top: 10px;
        right: 10px;
        font-size: 18px;
        border: none;
        background: none;
        cursor: pointer;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 15px;
    }

    .currency-input {
        display: flex;
    }

        .currency-input input[type="text"] {
            flex-grow: 1;
            margin-right: 5px;
        }

    .currency-symbol {
        padding: 10px;
        background-color: #e9ecef;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 14px;
        color: #6c757d;
    }

    .save-button {
        padding: 10px 20px;
        background-color: #0056b3;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 14px;
        font-weight: bold;
        cursor: pointer;
        width: 100%;
    }

        .save-button:hover {
            background-color: #004494;
        }
</style>