@model BudgetTRacker.Pages.IncomeModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Financial Statistics</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #F8F9FA;
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            height: 100vh;
        }

        /* Sidebar styling */
        .sidebar {
            width: 250px;
            background-color: white;
            padding: 20px;
            border-right: 1px solid #E0E0E0;
        }

            .sidebar img {
                border-radius: 50%;
                width: 50px;
                margin-bottom: 10px;
            }

            .sidebar h4 {
                font-size: 18px;
                margin-bottom: 40px;
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
            }

                .sidebar ul li {
                    margin-bottom: 20px;
                    display: flex;
                    align-items: center;
                }

                    .sidebar ul li img, .sidebar ul li i {
                        margin-right: 10px;
                    }

                    .sidebar ul li a {
                        text-decoration: none;
                        color: black;
                        font-size: 16px;
                    }

        /* Main content styling */
        .main-content {
            flex-grow: 1;
            padding: 20px;
        }

            .main-content .header {
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

                .main-content .header input[type="text"] {
                    padding: 10px;
                    width: 300px;
                    border: 1px solid #ccc;
                    border-radius: 5px;
                }

                .main-content .header .date-picker, .notification-bell {
                    padding: 10px;
                    border: 1px solid #ccc;
                    border-radius: 5px;
                }

        .notification-bell {
            margin-left: 10px;
        }

        /* Financial statistics chart styling */
        .chart-container {
            margin-top: 20px;
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
        }

            .chart-container canvas {
                width: 100%;
                height: 400px;
            }

        .btn-time-range {
            padding: 10px 15px;
            background-color: #0056b3;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn-time-range:hover {
                background-color: #004494;
            }

        .legend {
            margin-top: 20px;
        }

            .legend span {
                margin-right: 20px;
                font-size: 14px;
                display: inline-block;
            }

            .legend .income {
                color: green;
            }

            .legend .expense {
                color: red;
            }
    </style>
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        <div class="sidebar">
            <img src="https://i.pravatar.cc/100" alt="Profile Picture">
            <h4>Simrika Lama</h4>
            <ul>
                <li><i class="fas fa-home"></i><a href="#">Home</a></li>
                <li><i class="fas fa-list"></i><a href="#">Transaction</a></li>
                <li><i class="fas fa-user"></i><a href="#">My Profile</a></li>
                <li><i class="fas fa-plus-circle"></i><a href="#">Add Account</a></li>
                <li><i class="fas fa-money-check-alt"></i><a href="#">Income/Expense</a></li>
                <li><i class="fas fa-cog"></i><a href="#">Settings</a></li>
                <li><i class="fas fa-phone"></i><a href="#">Support</a></li>
                <li><i class="fas fa-sign-out-alt"></i><a href="#">Logout</a></li>
            </ul>
        </div>

        <!-- Main content -->
        <div class="main-content">
            <div class="header">
                <input type="text" placeholder="Search for the transaction name">
                <input type="text" class="date-picker" placeholder="2/12/2024">
                <div class="notification-bell">
                    <i class="fas fa-bell"></i>
                </div>
            </div>

            <!-- Financial Statistics -->
            <div class="chart-container">
                <h2>Financial Statistics</h2>
                <canvas id="financialChart"></canvas>
                <div class="legend">
                    <span class="income">Income</span>
                    <span class="expense">Expenses</span>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Chart.js initialization
        const ctx = document.getElementById('financialChart').getContext('2d');
        const financialChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr'],
                datasets: [
                    {
                        label: 'Income',
                        data: [5000, 7000, 8000, 12000],
                        backgroundColor: 'green'
                    },
                    {
                        label: 'Expenses',
                        data: [15000, 20000, 16000, 10000],
                        backgroundColor: 'red'
                    }
                ]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 25000
                    }
                },
                plugins: {
                    tooltip: {
                        callbacks: {
                            label: function(tooltipItem) {
                                const value = tooltipItem.raw;
                                return tooltipItem.dataset.label + ": Rs. " + value;
                            }
                        }
                    }
                }
            }
        });
    </script>
</body>
</html>
