@page
@model BudgetTRacker.Pages.SignUpModel
@{

    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - Rupiya</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />


    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: #FBFBFB;
            font-family: 'Poppins', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }


        .signup-container {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            padding: 40px;
            text-align: center;
            width: 400px;
        }

            .signup-container i {
                font-size: 50px;
                color: #02457A;
                margin-bottom: 20px;
            }

        h2 {
            font-weight: 300;
            margin-bottom: 20px;
            color: #333;
        }

        .input-field {
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            background-color: #f8f8f8;
        }

            .input-field:focus {
                border-color: #02457A;
                outline: none;
            }

        .password-container {
            position: relative;
        }

            .password-container i {
                position: absolute;
                right: 10px;
                top: 50%;
                transform: translateY(-50%);
                cursor: pointer;
                font-size: 18px; /* Adjust this value for the desired size */
                color: #02457A; /* Default color */
            }

        .signup-btn {
            width: 100%;
            background-color: #02457A;
            color: white;
            padding: 12px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            margin-top: 20px;
            cursor: pointer;
        }

            .signup-btn:hover {
                background-color: #02457A;
            }

        .divider {
            position: relative;
            text-align: center;
            margin: 20px 0;
        }

            .divider::before,
            .divider::after {
                content: '';
                height: 1px;
                width: 40%;
                background-color: #ccc;
                display: inline-block;
                position: absolute;
                top: 50%;
            }

            .divider::before {
                left: 0;
            }

            .divider::after {
                right: 0;
            }

            .divider span {
                background-color: #FBFBFB;
                padding: 0 10px;
                color: #777;
            }

        .google-btn {
            width: 100%;
            border: 1px solid #02457A;
            color: #02457A;
            padding: 12px;
            font-size: 16px;
            border-radius: 5px;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            margin-bottom: 10px;
        }

            .google-btn img {
                width: 20px;
                margin-right: 10px;
            }

            .google-btn:hover {
                background-color: #f1f1f1;
            }

        .terms {
            font-size: 12px;
            color: #777;
            margin-top: 20px;
        }

            .terms a {
                color: #02457A;
                text-decoration: none;
            }

                .terms a:hover {
                    text-decoration: underline;
                }

        .signin-link {
            font-size: 14px;
            margin-top: 20px;
        }

            .signin-link a {
                text-decoration: none;
                color: #02457A;
                font-weight: 500;
            }

                .signin-link a:hover {
                    text-decoration: underline;
                }

        i {
            color: #02457A; /* Default icon color */
        }

        .gender-container {
            text-align: left;
            margin: 10px 0;
        }

            .gender-container label {
                margin-left: 10px;
            }

        .text-danger {
            color: red;
            font-size: 12px;
            margin-top: 5px;
            display: block;
            text-align: left;
        }

    </style>
</head>
<body>
    <div class="signup-container">
        <i class="fa-solid fa-user"></i>
        <h2>Sign Up for Rupiya...</h2>

        <div style="color: red; font-size: 14px; margin-top: 5px;">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="error-message">@Model.ErrorMessage</div>
            }
        </div>

        <form method="post">

            <!-- Firstname input -->
            <input asp-for="SignupData.Firstname" type="text" class="input-field" placeholder="Firstname" required />
            <span asp-validation-for="SignupData.Firstname" class="text-danger"></span>

            <!-- Lastname input -->
            <input asp-for="SignupData.Lastname" type="text" class="input-field" placeholder="Lastname" required />
            <span asp-validation-for="SignupData.Lastname" class="text-danger"></span>

            <!-- Email input -->
            <input asp-for="SignupData.Email" type="email" class="input-field" placeholder="Email" required />
            <span asp-validation-for="SignupData.Email" class="text-danger"></span>

            <!-- Phone input -->
            <input asp-for="SignupData.Phone" type="tel" class="input-field" placeholder="Phone" required />
            <span asp-validation-for="SignupData.Phone" class="text-danger"></span>

            <input asp-for="SignupData.DateOfBirth" type="date" class="input-field" placeholder="Date of Birth" required />
            <span asp-validation-for="SignupData.DateOfBirth" class="text-danger"></span>

            <div style="color: red; font-size: 14px; margin-top: 5px;">
                @if (!string.IsNullOrEmpty(Model.DOBError))
                {
                    <div class="error-message">@Model.DOBError</div>
                }
            </div>
 

            <!-- Password input with eye icon -->
            <div class="password-container">
                <input asp-for="SignupData.Password" type="password" class="input-field" id="password" placeholder="Create Password" required />
                <span asp-validation-for="SignupData.Password" class="text-danger"></span>
                <i class="fas fa-eye" id="togglePassword"></i>
            </div>

            <!-- Confirm Password input -->
            <div class="password-container">
                <input asp-for="SignupData.ConfirmPassword" type="password" class="input-field" id="confirmPassword" placeholder="Confirm Password" required />
                <span asp-validation-for="SignupData.ConfirmPassword" class="text-danger"></span>
                <i class="fas fa-eye" id="togglePassword"></i>

            </div>

 

            <!-- Continue Button -->
            <button type="submit" class="signup-btn">Continue</button>
        </form>

        <!-- Privacy Policy -->
        <div class="terms">
            By clicking "Continue", you agree to the Rupiya <a asp-page="/Privacy">Privacy Policy</a>.
        </div>

        <!-- Sign In Link -->
        <div class="signin-link">
            Already have an account? <a asp-page="/SignIn">Sign In</a>
        </div>
    </div>

    <script>
        const togglePassword = document.querySelector('#togglePassword');
        const passwordField = document.querySelector('#password');

        togglePassword.addEventListener('click', () => {
            // Toggle the type attribute between 'password' and 'text'
            const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordField.setAttribute('type', type);

            // Toggle the eye icon
            togglePassword.classList.toggle('fa-eye-slash');
        });
    </script>

    <!-- FontAwesome for icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</body>
</html>
