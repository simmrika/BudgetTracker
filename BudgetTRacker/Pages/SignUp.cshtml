@page
@model BudgetTRacker.Pages.SignUpModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up for Rupiya</title>
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
</head>
<body>
    <div class="login-container">
        <div class="login-box">
            <div class="login-left">
                <div class="login-header">
                    <div class="avatar"></div>
                    <h2>Sign Up for Rupiya...</h2>
                </div>
                <form action="#">
                    <div class="input-box">
                        <input type="text" placeholder="Username" required>
                    </div>
                    <div class="input-box">
                        <input type="email" placeholder="Email" required>
                    </div>
                    <div class="input-box">
                        <input type="tel" placeholder="Phone" required>
                    </div>
                    <div class="input-box">
                        <input type="password" placeholder="Create Password" required>
                        <span class="show-password">👁</span>
                    </div>
                    <div class="btn-container">
                        <button type="submit" class="btn-primary">Continue</button>
                        <p>OR</p>
                        <button class="btn-google"><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png" alt="Google"> Continue with Google</button>
                    </div>
                </form>
                <div class="privacy-policy">
                    <p>By clicking "Continue" or "Continue with Google", you agree to the Rupiya <a href="#">Privacy Policy</a>.</p>
                </div>
                <div class="signup">
                    <p>Already have an account? <a href="#">Sign In</a></p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
