<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transactions</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #F8F9FA;
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            height: 100vh;
        }

        /* Sidebar styling */
        .sidebar {
            width: 250px;
            background-color: white;
            padding: 20px;
            border-right: 1px solid #E0E0E0;
        }

        .sidebar img {
            border-radius: 50%;
            width: 50px;
            margin-bottom: 10px;
        }

        .sidebar h4 {
            font-size: 18px;
            margin-bottom: 40px;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

        .sidebar ul li {
            margin-bottom: 20px;
            display: flex;
            align-items: center;
        }

        .sidebar ul li img, .sidebar ul li i {
            margin-right: 10px;
        }

        .sidebar ul li a {
            text-decoration: none;
            color: black;
            font-size: 16px;
        }

        /* Main content styling */
        .main-content {
            flex-grow: 1;
            padding: 20px;
        }

        .main-content .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .main-content .header input[type="text"] {
            padding: 10px;
            width: 300px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .main-content .header .date-picker, .notification-bell {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .notification-bell {
            margin-left: 10px;
        }

        /* Transactions table styling */
        .transactions-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
        }

        .transactions-table th, .transactions-table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .transactions-table th {
            background-color: #F5F5F5;
            font-size: 16px;
            font-weight: bold;
        }

        .transactions-table td img {
            margin-right: 10px;
        }

        .btn-new-transaction {
            padding: 10px 15px;
            background-color: #0056b3;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-new-transaction:hover {
            background-color: #004494;
        }

        /* Success badge styling */
        .status-success {
            color: white;
            background-color: #28a745;
            padding: 8px 15px;
            border-radius: 5px;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        <div class="sidebar">
            <img src="https://i.pravatar.cc/100" alt="Profile Picture">
            <h4>Simrika Lama</h4>
            <ul>
                <li><i class="fas fa-home"></i><a href="#">Home</a></li>
                <li><i class="fas fa-list"></i><a href="#">Transaction</a></li>
                <li><i class="fas fa-user"></i><a href="#">My Profile</a></li>
                <li><i class="fas fa-plus-circle"></i><a href="#">Add Account</a></li>
                <li><i class="fas fa-money-check-alt"></i><a href="#">Income/Expense</a></li>
                <li><i class="fas fa-cog"></i><a href="#">Settings</a></li>
                <li><i class="fas fa-phone"></i><a href="#">Support</a></li>
                <li><i class="fas fa-sign-out-alt"></i><a href="#">Logout</a></li>
            </ul>
        </div>

        <!-- Main content -->
        <div class="main-content">
            <div class="header">
                <input type="text" placeholder="Search for the transaction name">
                <input type="text" class="date-picker" placeholder="2/12/2024">
                <div class="notification-bell">
                    <i class="fas fa-bell"></i>
                </div>
            </div>

            <!-- Transactions Table -->
            <table class="transactions-table">
                <thead>
                    <tr>
                        <th>DETAILS</th>
                        <th>MERCHANT</th>
                        <th>AMOUNT</th>
                        <th>STATUS</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><img src="https://img.icons8.com/emoji/48/food-catering.png" alt="Food Catering">2024-01-23 Food Catering</td>
                        <td>Bhatbhateni Supermarket</td>
                        <td>Rs. 200</td>
                        <td><span class="status-success">Success</span></td>
                    </tr>
                    <tr>
                        <td><img src="https://img.icons8.com/color/48/electricity.png" alt="Electricity">2024-01-23 Electricity</td>
                        <td>NEA</td>
                        <td>Rs. 200</td>
                        <td><span class="status-success">Success</span></td>
                    </tr>
                    <tr>
                        <td><img src="https://img.icons8.com/ios-filled/50/internet.png" alt="Internet">2024-01-23 Internet</td>
                        <td>Worldlink</td>
                        <td>Rs. 200</td>
                        <td><span class="status-success">Success</span></td>
                    </tr>
                    <tr>
                        <td><img src="https://img.icons8.com/emoji/48/groceries.png" alt="Groceries">2024-01-23 Groceries</td>
                        <td>Bigmart</td>
                        <td>Rs. 200</td>
                        <td><span class="status-success">Success</span></td>
                    </tr>
                    <tr>
                        <td><img src="https://img.icons8.com/color/48/electricity.png" alt="Electricity">2024-01-23 Electricity</td>
                        <td>NEA</td>
                        <td>Rs. 200</td>
                        <td><span class="status-success">Success</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
